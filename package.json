{
  "name": "caphne",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm --filter=client --filter=server run dev",
    "dev:client": "pnpm --filter=client run dev",
    "dev:server": "pnpm --filter=server run dev",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "pnpm -r run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.4",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=24"
  },
  "pnpm": {
    "neverBuiltDependencies": ["unrs-resolver"]
  }
}
